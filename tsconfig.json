{
  "compilerOptions": {
    "strict": true,
    "pretty": true,
    "newLine": "lf",
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
